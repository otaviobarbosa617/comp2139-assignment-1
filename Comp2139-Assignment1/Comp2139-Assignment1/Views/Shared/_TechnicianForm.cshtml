@model Comp2139_Assignment1.Models.Technicians
@{
    var title = ViewData["Title"] as string;
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="@ViewData["Title"]">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if(title == "Edit")
            {
                <input type="hidden" asp-for="TechnicianId" />
            }

            <br />
            <div class="form-group row">
                <label asp-for="TechnicianName" class="col-sm-2 col-form-label">Technician Name:</label>
                <div class="col-sm-10">
                    <input asp-for="TechnicianName" class="form-control" />
                    <span asp-validation-for="TechnicianName" class="text-danger"></span>
                </div>
            </div>
            
            <br />
            <div class="form-group row">
                <label asp-for="TechnicianEmail" class="col-sm-2 col-form-label">Technician Email:</label>
                <div class="col-sm-10">
                    <input asp-for="TechnicianEmail" class="form-control" />
                    <span asp-validation-for="TechnicianEmail" class="text-danger"></span>
                </div>
            </div>
            
            <br />
            <div class="form-group row">
                <label asp-for="TechnicianPhone" class="col-sm-2 col-form-label">Technician Phone:</label>
                <div class="col-sm-10">
                    <input asp-for="TechnicianPhone" class="form-control" />
                    <span asp-validation-for="TechnicianPhone" class="text-danger"></span>
                </div>
            </div>

            <br />
            <div class="form-group">
                <input type="submit" value="@title" class="btn btn-success" />
                @if(title == "Create")
                {
                 <input type="reset" class="btn btn-danger" />   
                }
            </div>
        </form>
    </div>
</div>

<br />
<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}