@model Comp2139_Assignment1.Models.Technicians
@{
    var title = ViewData["Title"] as string;
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="@ViewData["Title"]">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if(title == "Edit")
            {
                <input type="hidden" asp-for="TecId" />
            }

            <br />
            <div class="form-group row">
                <label asp-for="TecName" class="col-sm-2 col-form-label">Tech Name</label>
                <div class="col-sm-10">
                    <input asp-for="TecName" class="form-control" />
                    <span asp-validation-for="TecName" class="text-danger"></span>
                </div>
            </div>
            
            <br />
            <div class="form-group row">
                <label asp-for="TecEmail" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-10">
                    <input asp-for="TecEmail" class="form-control" />
                    <span asp-validation-for="TecEmail" class="text-danger"></span>
                </div>
            </div>
            
            <br />
            <div class="form-group row">
                <label asp-for="TecPhone" class="col-sm-2 col-form-label">Phone</label>
                <div class="col-sm-10">
                    <input asp-for="TecPhone" class="form-control" />
                    <span asp-validation-for="TecPhone" class="text-danger"></span>
                </div>
            </div>

            <br />
            <div class="form-group">
                <input type="submit" value="@title" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<br />
<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}