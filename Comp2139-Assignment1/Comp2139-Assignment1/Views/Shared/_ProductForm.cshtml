@model Comp2139_Assignment1.Models.Products
@{
    var title = ViewData["Title"] as string;
}

<hr />
<div class="row">
    <div class="col">
        <form asp-action="@ViewData["Title"]">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if(title == "Edit")
            {
                <input type="hidden" asp-for="ProductId" />
            }
            <div class="form-group row">
                <label asp-for="ProductCode" class="col-sm-2 col-form-label">Product Code:</label>
                <div class="col-sm-10">
                    <input asp-for="ProductCode" class="form-control" />
                    <span asp-validation-for="ProductCode" class="text-danger"></span>
                </div>
            </div>

            <br />
            <div class="form-group row">
                <label asp-for="ProductName" class="col-sm-2 col-form-label">Product Name:</label>
                <div class="col-sm-10">
                    <input asp-for="ProductName" class="form-control" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
            </div>

            <br />
            <div class="form-group row">
                <label asp-for="ProductPrice" class="col-sm-2 col-form-label">Product Price:</label>
                <div class="col-sm-10">
                    <input asp-for="ProductPrice" class="form-control" />
                    <span asp-validation-for="ProductPrice" class="text-danger"></span>
                </div>
            </div>

            <br />
            <div class="form-group row">
                <label asp-for="ProductReleaseDate" class="col-sm-2 col-form-label">Product Release Date:</label>
                <div class="col-sm-10">
                    <input asp-for="ProductReleaseDate.Date" class="form-control" />
                    <span asp-validation-for="ProductReleaseDate" class="text-danger"></span>
                </div>
            </div>

            <br />
            <div class="form-group">
                <input type="submit" value="@title" class="btn btn-success" />
                @if(title == "Create")
                {
                 <input type="reset" class="btn btn-danger" />   
                }
            </div>
        </form>
    </div>
</div>

<br />
<div>
    <a asp-action="Index" class="btn btn-secondary">Back to Products List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
