@model Comp2139_Assignment1.Models.Incident
@{
    var title = ViewData["Title"] as string;
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action=@ViewData["Title"]>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if(title == "Edit")
            {
                <input type="hidden" asp-for="IncidentId" />
            }

            <br />
            <div class="form-group row">
                <label asp-for="Customer" class="col-sm-2 col-form-label">Client Name:</label>
                @if(title == "Create")
                {
                <div class="col-sm-10">
                    <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
                    <span asp-validation-for="Customer" class="text-danger"></span>
                    </div>
                }
                else
                {
                    <div class="col-sm-10">
                    <input asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId" />
                    <span asp-validation-for="Customer" class="text-danger"></span>
                </div>
                }
            </div>
            <div class="form-group row">
                <label asp-for="Product" class="col-sm-2 col-form-label">Product:</label>
                @if(title == "Create")
                {
                <div class="col-sm-10">
                    <select asp-for="ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
                    <span asp-validation-for="Product" class="text-danger"></span>
                    </div>
                }
                else
                {
                    <div class="col-sm-10">
                    <input asp-for="ProductId" class="form-control" asp-items="ViewBag.ProductId" />
                    <span asp-validation-for="Product" class="text-danger"></span>
                </div>
                }
            </div>
            <div class="form-group">
                <input type="submit" value="@title" class="btn btn-success" />
                @if(title == "Create")
                {
                 <input type="reset" class="btn btn-danger" />   
                }
            </div>
        </form>
    </div>
</div>

<br />
<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}